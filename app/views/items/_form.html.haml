- if @item.errors.any?
  %div
    %ul{style: "color: red"}
      - @item.errors.full_messages.each do |message|
        %li= message

= form_with model: @item, local: true do |form|
  商品の画像
  = form.fields_for :images do |i|
    = i.file_field :src
    %br/
  商品名
  = form.text_field :name
  %br/
  価格
  = form.number_field :price
  %br/
  商品の説明
  = form.text_field :product_description
  %br/
  サイズ
  = form.text_field :size
  %br/
  ブランド
  = form.text_field :brand
  %br/
  商品の状態
  = form.collection_select :condition_id, Condition.all, :id, :name
  %br/
  配送料
  = form.collection_select :delivary_charge_id, DelivaryCharge.all, :id, :name
  %br/
  送付元
  = form.collection_select :sender_id, Sender.all, :id, :name
  %br/
  配送にかかる日数
  = form.collection_select :shipping_date_id, ShippingDate.all, :id, :name
  %br/
  = form.submit