= render partial: "renderpage/header"

.sign-up
  .sign-up__contents
    .sign-up__contents__texts
      %p
        %span.sign-up__contents__texts--text1 だれでもかんたん、人生を変えるフリマアプリ
        %br
        %span.sign-up__contents__texts--text2 FURIMA はだれでもかんたんに出品・購入できる
        %br
        %span.sign-up__contents__texts--text2 フリマアプリです。

    .sign-up__contents__regist-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form|
        %p.sign-up__contents__regist-form--input プロフィール画像
        = form.file_field :user_img, class: 'sign-up__contents__regist-form--img'

        %p.sign-up__contents__regist-form--input
          氏名
          %span.sign-up__contents__regist-form--font-small (全角)
          %span.sign-up__contents__regist-form--required 必須
        = form.text_field :family_name, class: 'sign-up__contents__regist-form--family_name', placeholder: '姓', autocomplete: "family-name", required: 'required'
        = form.text_field :name, class: 'sign-up__contents__regist-form--given_name', placeholder: '名', autocomplete: "given-name", required: 'required'

        %p.sign-up__contents__regist-form--input
          氏名
          %span.sign-up__contents__regist-form--font-small (フリガナ・全角)
          %span.sign-up__contents__regist-form--required 必須
        = form.text_field :family_name_kana, class: 'sign-up__contents__regist-form--family_name_kana', placeholder: '姓（カナ）', required: 'required'
        = form.text_field :name_kana, class: 'sign-up__contents__regist-form--name_kana', placeholder: '名（カナ）', required: 'required'

        %p.sign-up__contents__regist-form--input
          ニックネーム
          %span.sign-up__contents__regist-form--required 必須
        = form.text_field :nickname, class: 'sign-up__contents__regist-form--nickname', placeholder: 'ニックネーム', required: 'required'

        %p.sign-up__contents__regist-form--input
          性別
        .sign-up__contents__regist-form--gender
          = form.radio_button :gender, "男性"
          男性
          = form.radio_button :gender, "女性"
          女性

        %p.sign-up__contents__regist-form--input
          誕生日
          %span.sign-up__contents__regist-form--required 必須
        = form.date_field :birthday, class: 'sign-up__contents__regist-form--birthday', placeholder: '誕生日', required: 'required'

        %p.sign-up__contents__regist-form--input
          電話番号
          %span.sign-up__contents__regist-form--font-small (半角)
        = form.telephone_field :phone, class: 'sign-up__contents__regist-form--phone', placeholder: '電話番号'

        %p.sign-up__contents__regist-form--input
          メールアドレス
          %span.sign-up__contents__regist-form--required 必須
        = form.email_field :email, class: 'sign-up__contents__regist-form--email', placeholder: 'メールアドレス', autocomplete: "email", required: 'required'

        %p.sign-up__contents__regist-form--input
          パスワード
          %span.sign-up__contents__regist-form--required 必須
        = form.password_field :password, class: 'sign-up__contents__regist-form--password', placeholder: 'パスワード', required: 'required'

        %p.sign-up__contents__regist-form--input
          パスワード
          %span.sign-up__contents__regist-form--font-small (確認用)
          %span.sign-up__contents__regist-form--required 必須
        = form.password_field :password_confirmation, class: 'sign-up__contents__regist-form--password', placeholder: 'パスワード（確認用）', required: 'required'

        = form.submit "新規登録", class: 'sign-up__contents__regist-form--submit'

= render partial: "renderpage/footer"